@model IEnumerable<webcnpm1.Models.Component>

@{
    ViewData["Title"] = "Quản lý Linh kiện";
}

<div class="header">
    <h1><i class="fas fa-microchip"></i> Quản lý Linh kiện</h1>
    <p>Theo dõi và quản lý kho linh kiện, phụ tùng.</p>
</div>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm Linh kiện mới</a>
</div>

<div class="dashboard-card">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.QuantityInStock)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuantityInStock)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 