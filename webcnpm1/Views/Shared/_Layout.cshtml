<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RepairCenter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fas fa-tools"></i> RepairCenter</h3>
        </div>
        <ul class="nav-menu">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="nav-link"><i class="fas fa-tachometer-alt"></i> Tổng quan</a>
            </li>
            <li class="nav-item">
                <a asp-controller="RepairOrder" asp-action="Index" class="nav-link"><i class="fas fa-file-invoice"></i> Đơn sửa chữa</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Service" asp-action="Index" class="nav-link"><i class="fas fa-concierge-bell"></i> Dịch vụ</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Component" asp-action="Index" class="nav-link"><i class="fas fa-microchip"></i> Linh kiện</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Customer" asp-action="Index" class="nav-link"><i class="fas fa-users"></i> Khách hàng</a>
            </li>
            <li class="nav-item">
                <a asp-page="/User/Index" class="nav-link"><i class="fas fa-user-shield"></i> Người dùng</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Report" asp-action="Index" class="nav-link"><i class="fas fa-chart-line"></i> Báo cáo</a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        <header class="topbar">
            <div class="topbar-left">
                <!-- Nút để ẩn/hiện sidebar trên mobile -->
            </div>
            <div class="topbar-right">
                <div class="user-profile">
                    <i class="fas fa-user-circle"></i>
                    <span>Admin</span>
                    <a href="#" class="logout-link" title="Đăng xuất"><i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
        </header>

        <main class="content-wrapper">
            @RenderBody()
        </main>
        
        <footer class="footer">
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year - RepairCenter Management System. All rights reserved.</p>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
