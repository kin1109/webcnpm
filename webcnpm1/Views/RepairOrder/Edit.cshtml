@model webcnpm1.Models.RepairOrder

@{
    ViewData["Title"] = "Chỉnh sửa Đơn sửa chữa";
}

<div class="header">
    <h1><i class="fas fa-edit"></i> @ViewData["Title"]</h1>
    <p>Cập nhật thông tin cho đơn sửa chữa ID: @Model.Id.</p>
</div>

<div class="dashboard-card">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />

                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProblemDescription" class="control-label">Mô tả vấn đề & Tên thiết bị</label>
                    <textarea asp-for="ProblemDescription" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="ProblemDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AssignedTo" class="control-label">Nhân viên phụ trách</label>
                    <select asp-for="AssignedTo" class="form-control" asp-items="ViewBag.AssignedTo"></select>
                    <span asp-validation-for="AssignedTo" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div> 