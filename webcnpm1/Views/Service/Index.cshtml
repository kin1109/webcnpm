@model IEnumerable<webcnpm1.Models.Service>

@{
    ViewData["Title"] = "Quản lý Dịch vụ";
}

<div class="header">
    <h1><i class="fas fa-concierge-bell"></i> @ViewData["Title"]</h1>
    <p>Quản lý các dịch vụ sửa chữa có sẵn.</p>
</div>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm dịch vụ mới</a>
</div>

<div class="dashboard-card">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i> Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i> Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            <i class="fas fa-info-circle"></i> Không tìm thấy dịch vụ nào.
        </div>
    }
</div> 