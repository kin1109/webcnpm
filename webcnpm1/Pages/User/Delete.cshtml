@page
@model webcnpm1.Pages.User.DeleteModel
@{
    ViewData["Title"] = "Xóa Người dùng";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa người dùng này?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Họ tên:</dt>
                        <dd class="col-sm-9">@Model.User.FullName</dd>

                        <dt class="col-sm-3">Username:</dt>
                        <dd class="col-sm-9">@Model.User.Username</dd>
                        
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.User.Email</dd>

                        <dt class="col-sm-3">Vai trò:</dt>
                        <dd class="col-sm-9">@Model.User.Role</dd>
                    </dl>
                </div>

                <div class="card-footer">
                    <form method="post">
                        <input type="hidden" asp-for="User.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Hủy
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
